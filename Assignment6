package javahome;

public class Assignment_6 {
	   int[][] array3;
	public static void main(String[] args) {
	   int[][] array1= {{3,2},{4,5}};
	   int[][] array2= {{5,1},{3,2}};
	   int[][] array3=new int[2][2];
	   int n=array1.length;
	   for(int i=0;i<n;i++)
	   {
		   for(int j=0;j<n;j++)
		   {
			   array3[i][j]=array1[i][j]+array2[i][j];
			   
		   }
		   
	   }
	   System.out.println("First Matrix->");
	   for(int i=0;i<n;i++)
	   {
		   for(int j=0;j<n;j++)
		   {
			  System.out.print("\t"+array1[i][j]);
			   
		   }
		   System.out.println();
	   }
	   System.out.println("Second Matrix->");
	   for(int i=0;i<n;i++)
	   {
		   for(int j=0;j<n;j++)
		   {
			  System.out.print("\t"+array2[i][j]);
			   
		   }
		   System.out.println();
	   }
	   System.out.println("Addition Of Two Matrix-->");
	   for(int i=0;i<n;i++)
	   {
		   for(int j=0;j<n;j++)
		   {
			  System.out.print("\t"+array3[i][j]);
			   
		   }
		   System.out.println();
	   }

	}

}
